@model Vehicle

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl>
        <dt>Car Plate:</dt>
        <dd>@Model.CarPlate</dd>
        <dt>Km:</dt>
        <dd>@Model.Km</dd>
        <dt>Model:</dt>
        <dd>@Model.Model</dd>
        <dt>Color:</dt>
        <dd>@Model.Color</dd>
        <dt>Gear Type:</dt>
        <dd>@Model.GearType</dd>
        <dt>Brand:</dt>
